{
    "manifest_version": 3,
    "name": "Salesforce Accelerator",
    "icons":{
        "16": "./assets/logo.png",
        "32": "./assets/logo.png",
        "48": "./assets/logo.png",
        "128": "./assets/logo.png"
    },
    "version": "1.0",
    "background": {
        "service_worker": "background/background.js"
    },
    "action": {},
    "options_page": "./options/options.html",
    "host_permissions": [
        "https://*.force.com/*",
        "https://*.salesforce.com/*",
        "https://*.salesforce-setup.com/*"
    ],
    "permissions": [
        "storage",
        "activeTab",
        "tabs"
    ],
    "content_scripts": [
        {
            "matches": ["https://*.lightning.force.com/*", "https://*.my.salesforce.com/*", "https://*.salesforce-setup.com/*"],
            "js": [
                "./content/hotkeys.js",
                "./content/newRecord.js",
                "./content/appLauncher.js",
                "./content/content.js"
            ]
        }
    ],
    "commands": {
        "newRecord": {
            "description": "Add New Record to current Object",
            "suggested_key": {
                "linux": "Alt+N",
                "mac": "Alt+N",
                "windows": "Alt+N"
            }
        },
        "openAppLauncher": {
            "description": "Open App Launcher",
            "suggested_key": {
                "linux": "Alt+A",
                "mac": "Alt+A",
                "windows": "Alt+A"
            }
        }
    },
    "description": "Boost productivity with seamless hotkeys for Salesforce navigation and tasks."
}